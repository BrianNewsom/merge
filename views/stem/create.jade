extends ../layout

block content
  .page-header
    h3 Add a stem to your track.
    input(type="file", id="files", onchange="s3_upload('#{stemid}')")
    p(id="status")
        Please select a file

    form(method="POST" action="/addstem/#{trackid}/#{stemid}") 
        input(type='hidden', name='_csrf', value=_csrf)
        input(type="text", name="name", placeholder="name")
        input(type="submit", value="Add to track!")

